<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="background" stylesheets="@/CSS/EndGameScreen.css"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="client.scenes.EndGameScreenCtrl">
    <children>
        <TableView fx:id="leaderboard" layoutX="32.0" layoutY="60.0" prefHeight="281.0" prefWidth="436.0">
            <columns>
                <TableColumn fx:id="colRank" prefWidth="75.0" text="Rank"/>
                <TableColumn fx:id="colUserName" prefWidth="285.0" text="Username"/>
                <TableColumn fx:id="colPoints" prefWidth="75.0" text="Score"/>
            </columns>
        </TableView>
        <ProgressBar fx:id="progressBar" layoutX="32.0" layoutY="24.0" prefHeight="20.0" prefWidth="260.0"
                     progress="0.0"/>
        <Label fx:id="status" layoutX="335.0" layoutY="26.0" prefHeight="17.0" prefWidth="271.0"
               text="End of Game! Play again or back to main."/>
        <Button fx:id="playAgain" layoutX="485.0" layoutY="297.0" mnemonicParsing="false" onAction="#playAgain"
                prefHeight="26.0" prefWidth="101.0" text="Play Again"/>
        <Button fx:id="leave" layoutX="485.0" layoutY="341.0" mnemonicParsing="false" onAction="#leaveGame"
                prefHeight="26.0" prefWidth="101.0" text="Leave"/>
        <Label fx:id="count" layoutX="32.0" layoutY="359.0" prefHeight="17.0" prefWidth="228.0" text="[Count]"/>
    </children>
</AnchorPane>
