<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
            prefWidth="817.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="client.scenes.MultiplayerCtrl">
    <children>
        <Label fx:id="questionPrompt" layoutX="220.0" layoutY="18.0" text="[Question]"/>
        <Label fx:id="countdown" layoutX="222.0" layoutY="48.0" text="Options:"/>
        <Button fx:id="leaveButton" layoutX="727.0" layoutY="359.0" mnemonicParsing="false" onAction="#leaveGame"
                text="Leave"/>
        <TableView fx:id="leaderboard" layoutX="8.0" layoutY="44.0" opacity="0.0" prefHeight="198.0" prefWidth="644.0">
            <columns>
                <TableColumn fx:id="colRank" prefWidth="35.0" text="rank"/>
                <TableColumn fx:id="colUserName" prefWidth="548.0" text="player"/>
                <TableColumn fx:id="colPoints" prefWidth="61.0" text="points"/>
            </columns>
        </TableView>
        <StackPane fx:id="answerArea" alignment="BASELINE_LEFT" layoutX="220.0" layoutY="65.0" prefHeight="156.0"
                   prefWidth="235.0"/>
        <Button fx:id="submitButton" layoutX="567.0" layoutY="252.0" mnemonicParsing="false"
                onAction="#submitAnswerButton" text="Final Answer"/>
        <Label fx:id="pointsLabel" layoutX="698.0" layoutY="18.0" text="Points: 0"/>
        <Label fx:id="questionCount" layoutX="220.0" layoutY="5.0" text="Question: 1"/>
        <ProgressBar fx:id="timeProgress" layoutX="224.0" layoutY="252.0" prefHeight="20.0" prefWidth="321.0"
                     progress="0.0"/>
        <Button fx:id="removeOneButton" layoutX="235.0" layoutY="308.0" mnemonicParsing="false"
                onAction="#removeOneAnswer" prefHeight="26.0" prefWidth="103.0" text="Remove One Answer">
            <font>
                <Font size="9.0"/>
            </font>
        </Button>
        <Button fx:id="decreaseTimeButton" layoutX="395.0" layoutY="308.0" mnemonicParsing="false"
                onAction="#decreaseTime" prefHeight="26.0" prefWidth="103.0" text="Decrease Time"/>
        <Button fx:id="doublePointsButton" layoutX="546.0" layoutY="308.0" mnemonicParsing="false"
                onAction="#doublePoints" prefHeight="26.0" prefWidth="103.0" text="Double Points"/>
        <Label fx:id="jokerRefreshLabel" layoutX="220.0" layoutY="335.0"/>
        <ImageView fx:id="imagePanel" fitHeight="156.0" fitWidth="177.0" layoutX="463.0" layoutY="66.0"
                   pickOnBounds="true" preserveRatio="true"/>
        <ImageView fx:id="emojiFunny" fitHeight="60.0" fitWidth="60.0" layoutX="14.0" layoutY="321.0"
                   onMouseClicked="#emojiEventHandler" pickOnBounds="true" preserveRatio="true">
        </ImageView>
        <Button fx:id="playAgain" layoutX="447.0" layoutY="292.0" mnemonicParsing="false" onAction="#playAgain"
                prefHeight="25.0" prefWidth="103.0" text="Play again"/>
        <Label fx:id="status" layoutX="486.0" layoutY="363.0" text="[Status]"/>
        <Button fx:id="backButton" layoutX="727.0" layoutY="359.0" mnemonicParsing="false" onAction="#back"
                text="Go Back"/>
        <ImageView fx:id="emojiSad" fitHeight="60.0" fitWidth="60.0" layoutX="82.0" layoutY="323.0"
                   onMouseClicked="#emojiEventHandler" pickOnBounds="true" preserveRatio="true">
        </ImageView>
        <ImageView fx:id="emojiAngry" fitHeight="60.0" fitWidth="60.0" layoutX="148.0" layoutY="323.0"
                   onMouseClicked="#emojiEventHandler" pickOnBounds="true" preserveRatio="true">
        </ImageView>
        <TableView fx:id="emojiList" layoutX="652.0" layoutY="43.0" prefHeight="200.0" prefWidth="151.0">
            <columns>
                <TableColumn fx:id="emojiUsername" prefWidth="75.0" sortable="false" text="Username"/>
                <TableColumn fx:id="emojiImage" prefWidth="75.0" sortable="false" text="Emoji"/>
            </columns>
        </TableView>
        <Label fx:id="removedPlayers" layoutX="382.0" layoutY="285.0" opacity="0.0" text="Player : DISCONNECTED..."/>
        <Label fx:id="jokerUsage" layoutX="338.0" layoutY="332.0" prefHeight="17.0" prefWidth="251.0" wrapText="true"/>
    </children>
</AnchorPane>
